<div class="content">
	<div>
		<h1 class="centered"><%= @ingredient.name %><%= current_user %></h1>
		<h5>Recipes this ingredient is used in: </h3>
		<ul>
			<% for recipe in @ingredient.recipes %>
				<li><%= link_to recipe.name, '/recipes/' + recipe.name.parameterize(separator: '-') %></li>
			<% end %>
			<%= button_to 'Add to Cart', '', data: @ingredient %>
		</ul>
	</div>
</div>