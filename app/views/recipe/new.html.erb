
<div class="container">
	<div class="content">

		<%= form_for @recipe, url: '/recipes/' + @recipe.name.parameterize(separator: '-') do |f| %>
			<fieldset>
		        <div class="control-group">
		          <label class="label" for="name">Recipe name</label>
		          <%= f.text_field :name %>
		        </div>

		        <div class="control-group">
		          <label class="label" for="image_url">Image URL</label>
		          <%= f.text_field :image_url %>
		        </div>

		        <div class="control-group">
		          <label class="label" for="instructions">Recipe Instructions</label>
		          <%= f.text_area :instructions %>
		        </div>

		        <div class="controls">
		          <%= f.submit "Submit", class: "btn" %>
		        </div>
		    </fieldset>

		<% end %>
	</div>
</div>